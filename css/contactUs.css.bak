/*xinchouwang.cn CSS Document */

/*CSS Reset*/
body,div,p,a{margin:0; padding:0;}
img{border:none;}


/*page CSS*/

#banner{display:block; width:100%; height:300px; margin:0 auto;min-width:1160px;}
#banner img{display:block; width:100%; height:300px;}

#content{width:1160px; margin:0 auto;font:13px "Microsoft YaHei";}
#topArticle,#bottomInfo{width:1160px;}
#topArticle{text-align:center;}
.topArt{padding:70px 115px;}
.topArt p{font-size:38px;font-weight:bold;height:60px;line-height:60px;}
.topArt span{color:#999;height:24px;line-height:24px;}

.bottomIn{display:block;overflow:hidden;padding-bottom:150px;}
#con1{float:left;width:265px;text-align:center;}
#con1 p,#con2 p,#con3 p{color:#000000;text-align:center;font-size:16px;font-family:"Microsoft YaHei";font-weight:bold;}
#con1 span,#con2 span,#con3 span{color:#BCBCBC; font-family:"Microsoft YaHei";text-align:center;line-height:28px;}
#con2{width:265px;float:left;text-align:center;margin-left:150px;}
#con3{float:right;}
.con4{color:#BCBCBC; font-family:"Microsoft YaHei";text-align:center;line-height:28px;}
.conn{margin-top:20px;margin-left:26px;}
.conn1{background-image:url(../images/nav-5.gif);width:216px;height:41px;margin-bottom:12px;}
